{
  "layer": "bottom",
  "position": "top",
  // "height": 1,
  "modules-left": ["clock", "wlr/workspaces"],
  "modules-center": [],
  "modules-right": ["tray", "battery", "cpu", "memory", "backlight", "network"],
  "hyprland/window": {
