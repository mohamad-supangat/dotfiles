    "format-wifi": "<span>Ôá´</span> {essid} {bandwidthTotalBytes}",
     "format-ethernet": "<span>Ôõø</span> {ipaddr} {bandwidthTotalBytes} {icon}",
     "format-linked": "<span>Ôõø</span>",
